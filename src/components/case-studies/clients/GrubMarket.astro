---
import { getEntry } from 'astro:content'
import { Image } from 'astro:assets'

import CaseStudy from '@/components/case-studies/CaseStudy.astro'

import dashboardAsset from '@/assets/images/case-studies/grub-market/dashboard.png'
import graphAsset from '@/assets/images/case-studies/grub-market/graph.svg'
import tag1Asset from '@/assets/images/case-studies/grub-market/tag-1.svg'
import tag2Asset from '@/assets/images/case-studies/grub-market/tag-2.svg'
import tag3Asset from '@/assets/images/case-studies/grub-market/tag-3.svg'
import stockAsset from '@/assets/images/case-studies/grub-market/stock.svg'
import rowHighlightAsset from '@/assets/images/case-studies/grub-market/row-highlight.svg'
import kpisAsset from '@/assets/images/case-studies/grub-market/kpis.svg'
import dashAsset from '@/assets/images/case-studies/grub-market/dashed-path.svg'

import dashboardAssetOld from '@/assets/images/case-studies/grub-market/old/dashboard.png'
import graphAssetOld from '@/assets/images/case-studies/grub-market/old/graph.svg'
import tag1AssetOld from '@/assets/images/case-studies/grub-market/old/tag-1.svg'
import tag2AssetOld from '@/assets/images/case-studies/grub-market/old/tag-2.svg'
import tag3AssetOld from '@/assets/images/case-studies/grub-market/old/tag-3.svg'
import stockAssetOld from '@/assets/images/case-studies/grub-market/old/stock.svg'
import rowHighlightAssetOld from '@/assets/images/case-studies/grub-market/old/row-highlight.svg'
import kpisAssetOld from '@/assets/images/case-studies/grub-market/old/kpis.svg'
import dashAssetOld from '@/assets/images/case-studies/grub-market/old/dashed-path.svg'

const entry = await getEntry('case-studies', 'grub-market')
---

<CaseStudy
  data={entry.data}
  class="bg-gradient"
  mediaAspectRatio="725/530"
  id="grub-market"
>
  <figcaption class="sr-only">
    A collection of assets related to the GrubMarket dashboard. Assets include
    an exploded out row, KPI's, inventory management, price graph, and tags
    related to logistics.
  </figcaption>
  <!-- <div data-grub-asset="dash">
    <Image src={dashAssetOld} alt="" class="md:scale-110" />
  </div> -->
  <div>
    <Image src={dashAsset} alt="" />
  </div>
  <!-- <div data-speed="1.01">
    <Image src={dashboardAssetOld} alt="" data-grub-asset="dashboard"   />
  </div> -->
  <div>
    <Image
      src={dashboardAsset}
      alt=""
      class="w-[60%] rounded-[2%]"
      data-grub-asset="dashboard"
    />
  </div>
  <div>
    <Image src={kpisAsset} alt="" data-grub-asset="kpis" />
  </div>
  <!-- <div data-speed="0.97">
    <Image src={kpisAssetOld} alt="" data-grub-asset="kpis" />
  </div> -->
  <!-- <div data-speed="0.94">
    <Image src={graphAssetOld} alt="" data-grub-asset="graph" />
  </div> -->
  <div>
    <Image src={graphAsset} alt="" data-grub-asset="graph" />
  </div>
  <!-- <div data-speed="1.02">
    <Image src={stockAssetOld} alt="" data-grub-asset="stock" />
  </div> -->
  <div>
    <Image src={stockAsset} alt="" data-grub-asset="stock" />
  </div>
  <div>
    <Image src={rowHighlightAsset} alt="" data-grub-asset="row-highlight" />
  </div>
  <!-- <div data-speed="1.03">
    <Image src={rowHighlightAssetOld} alt="" data-grub-asset="row-highlight" />
  </div> -->
  <!-- <div data-speed=".98">
    <Image src={tag1AssetOld} alt="" data-grub-asset="tag" />
    <Image src={tag2AssetOld} alt="" data-grub-asset="tag" />
    <Image src={tag3AssetOld} alt="" data-grub-asset="tag" />
  </div> -->
  <div>
    <Image src={tag1Asset} alt="" data-grub-asset="tag" />
    <Image src={tag2Asset} alt="" data-grub-asset="tag" />
    <Image src={tag3Asset} alt="" data-grub-asset="tag" />
  </div>
</CaseStudy>

<style>
  .bg-gradient {
    background: linear-gradient(
        0deg,
        hsla(0, 0%, 100%, 0.4) 0%,
        hsla(0, 0%, 100%, 0.4) 100%
      ),
      linear-gradient(
        263deg,
        hsla(61, 100%, 87%, 0.6) 25.88%,
        hsla(62, 90%, 92%, 0) 89.65%
      ),
      linear-gradient(
        137deg,
        hsla(137, 42%, 58%, 0.79) 15.32%,
        hsl(201, 81%, 90%) 61.82%,
        hsl(12, 100%, 94%) 111.28%,
        hsl(223, 63%, 77%) 149.67%
      );
  }

  [data-grub-asset='stock'] {
    @apply relative left-[31%] top-[-17.7%] w-[22%] rounded-[1vmin];

    box-shadow:
      0px 6px 16px rgba(105, 86, 55, 0.12),
      0px 2px 6px rgba(0, 0, 0, 0.08);
  }

  [data-grub-asset='kpis'] {
    @apply relative left-[-15%] top-[-32.5%] w-[53%] rounded-[1vmin];

    box-shadow:
      0px 6px 16px 0px rgba(0, 102, 182, 0.12),
      0px 2px 6px 0px rgba(0, 0, 0, 0.08),
      -6px -12px 16px 0px rgba(141, 88, 2, 0.06);
  }

  [data-grub-asset='row-highlight'] {
    @apply relative left-[-7%] top-[-4%] w-[67%] rounded-[0.5vmin];

    box-shadow:
      0px 10px 20px 0px rgba(136, 116, 84, 0.32),
      0px 5px 4px -2px rgba(0, 0, 0, 0.08);
  }

  [data-grub-asset='graph'] {
    @apply relative left-[-25%] top-[16%] w-[22%] rounded-[1vmin];

    box-shadow:
      0px 6px 16px 0px rgba(105, 86, 55, 0.12),
      0px 2px 6px -2px rgba(0, 0, 0, 0.08);
  }

  [data-grub-asset='tag'] {
    --tag-top: 65%;
    --tag-height: 4.5%;
    --tag-gap: 0.75%;

    @apply absolute left-[72%] w-auto rounded-[1vmin];

    height: var(--tag-height);
    top: var(--tag-top);
    box-shadow:
      0px 6px 16px 0px rgba(105, 86, 55, 0.12),
      0px 2px 6px -2px rgba(0, 0, 0, 0.08);

    &:nth-of-type(2) {
      top: calc(var(--tag-top) + var(--tag-height) + var(--tag-gap));
    }

    &:nth-of-type(3) {
      top: calc(
        var(--tag-top) + (var(--tag-height) * 2) + (var(--tag-gap) * 2)
      );
    }
  }
</style>

<script>
  import { gsap } from 'gsap'
  import { mmFilters } from '@/scripts/app.ts'

  gsap.matchMedia().add(mmFilters, (context) => {
    let { reduceMotion } = context.conditions ?? {}

    const scaleCheck = reduceMotion ? 1 : 0.925
    const stagger = reduceMotion ? '0' : '<0.2'

    gsap
      .timeline({
        scrollTrigger: {
          trigger: '#grub-market',
          start: 'top 85%',
          end: 'bottom top',
          toggleActions: 'play none play none',
          once: true,
        },
        invalidateOnRefresh: true,
        immediateRender: false,
        defaults: {
          duration: 1,
          ease: 'circ.out',
          clearProps: 'x,y',
        },
      })
      .from('[data-grub-asset="dash"]', {
        opacity: 0,
        y: reduceMotion ? 0 : 50,
        scale: scaleCheck,
      })
      .from(
        '[data-grub-asset="dashboard"]',
        {
          opacity: 0,
          y: reduceMotion ? 0 : -50,
          scale: scaleCheck,
          rotation: reduceMotion ? 0 : -6,
        },
        stagger,
      )
      .from(
        '[data-grub-asset="kpis"]',
        {
          opacity: 0,
          y: reduceMotion ? 0 : '-=50',
          x: reduceMotion ? 0 : '-=25',
          scale: scaleCheck,
        },
        stagger,
      )
      .from(
        '[data-grub-asset="stock"]',
        {
          opacity: 0,
          y: reduceMotion ? 0 : -50,
          x: reduceMotion ? 0 : 50,
          scale: scaleCheck,
        },
        stagger,
      )
      .from(
        '[data-grub-asset="row-highlight"]',
        {
          opacity: 0,
          x: reduceMotion ? 0 : 50,
          scale: scaleCheck,
        },
        stagger,
      )
      .from(
        '[data-grub-asset="tag"]',
        {
          opacity: 0,
          y: reduceMotion ? 0 : 50,
          scale: scaleCheck,
          stagger: reduceMotion ? 0 : 0.15,
        },
        stagger,
      )
      .from(
        '[data-grub-asset="graph"]',
        {
          opacity: 0,
          x: reduceMotion ? 0 : -50,
          scale: scaleCheck,
        },
        stagger,
      )
  })
</script>
